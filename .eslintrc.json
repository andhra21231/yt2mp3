{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "rules": {
        "func-names": "warn",
        "global-require": "warn",
        "import/no-dynamic-require": "off",
        "indent": ["error", 2],
        "linebreak-style": ["error", "windows"],
        "no-console": "off",
        "no-plusplus": "off",
        "no-restricted-syntax": "warn",
        "prefer-const": "off"
    }
}
